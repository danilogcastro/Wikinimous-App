<!-- navbar -->

<div class="title">
  <h2><%= @article.title %></h2>
  <%= link_to edit_article_path do %>
    <i class="fas fa-edit"></i>
  <% end %>
  <%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fas fa-trash"></i>
  <% end %>
</div>

<div class="content">
  <p><%= @article.content %></p>
</div>
